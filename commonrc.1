slugify() {
    # https://gist.github.com/oneohthree/f528c7ae1e701ad990e6
    sed -r 's/[^a-zA-Z0-9]+/-/g' | sed -r s/^-+\|-+$//g | tr A-Z a-z
}

tslugify() {
    echo "$(date +%F_%H%M%S_%Z)_$(cat|slugify)"
}

