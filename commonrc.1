RUNLOG=rr.log
function rr {
    if [ $# -eq 0 ]; then
        LASTCMD=$(fc -ln -1)
        echo 'commit last command:'
        echo $LASTCMD
        echo $LASTCMD >> $RUNLOG
    else
        echo $@ >> $RUNLOG
        $@
    fi
}

