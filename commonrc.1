nxd() {
    if [ -e flake.nix ]; then
        nix --extra-experimental-features nix-command --extra-experimental-features flakes develop $*
    elif [ -e shell.nix ]; then
        echo "WARNING: using shell.nix"
        nix-shell $*
    elif [ -e default.nix ]; then
        echo "WARNING: using default.nix"
        nix-shell $*
    else
        echo "no usable file"
    fi
}
